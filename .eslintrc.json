{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier", "import"],
  "rules": {
    "linebreak-style": "off",
    "import/extensions": "off",
    "import/no-unresolved": "error",
    "no-console": "off",
    "camelcase": "off",
    "import/prefer-default-export": "off",
    "func-names": "off",
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
